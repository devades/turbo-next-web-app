{
  "name": "@repo/ui",
  "version": "0.0.0",
  "license": "MIT",
  "sideEffects": false,
  "files": [
    "dist/**",
    "dist"
  ],
  "exports": {
    "./*": {
      "import": {
        "types": "./dist/*.d.mts",
        "default": "./dist/*.mjs"
      },
      "require": {
        "types": "./dist/*.d.ts",
        "default": "./dist/*.js"
      }
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "check-types": "tsc --noEmit",
    "lint": "eslint . --max-warnings 0",
    "clean": "rm -rf .turbo node_modules dist",
    "test": "jest"
  },
  "jest": {
    "preset": "@devades/jest-presets/browser"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@devades/eslint-config": "0.0.3",
    "@devades/jest-presets": "0.0.2",
    "@devades/typescript-config": "0.0.5",
    "@types/react": "^18.2.61",
    "@types/node": "^22.14.0",
    "@types/react-dom": "^18.2.19",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.24.0",
    "jest": "^29.7.0",
    "postcss": "^8.5.3",
    "tsup": "^8.0.2",
    "typescript": "5.8.2"
  },
  "peerDependencies": {
    "@types/react": ">=18",
    "@types/react-dom": ">=18",
    "react": ">=18",
    "react-dom": ">=18"
  },
  "dependencies": {
    "@headlessui/react": "^2.2.1",
    "@heroicons/react": "^2.2.0",
    "@tailwindcss/postcss": "^4.1.3",
    "autoprefixer": "^10.4.21",
    "react": "^18.2.0",
    "tailwindcss": "^3.4.17"
  }
}
